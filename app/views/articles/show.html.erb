<% a = @article %>

<article> <%= sanitize a.body, tags: %w(p h1 br em u s a pre img), attributes: %w(src href target) %> </article>

<%= form_with url: access_to_edit_article_path do |f| %>
  <%= f.password_field :password, placeholder: 'password to edit this article' %>
  <%= f.submit "edit" %>
<% end %>
