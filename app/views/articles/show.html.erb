<% a = @article %>

<% if flash[:error].present? %>
    <div class="errors"><%= flash[:error] %></div>
<% end %>

<article> <%= sanitize a.body, tags: %w(p h1 h2 br em u s a pre img), attributes: %w(src href target) %> </article>

<% if a.password_digest.present? %>
  <%= form_with url: access_to_edit_article_path do |f| %>
    <%= f.password_field :password,
      placeholder: 'password to edit this article',
      class: "password_field" %>
    <%= f.submit "edit", class: "edit_button" %>
  <% end %>
<% end %>
